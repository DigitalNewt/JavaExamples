<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <!-- Servlets -->
    <servlet>
        <servlet-name>RandomNumberService</servlet-name>
        <servlet-class>com.landisgyr.randomnumbertracker.server.RandomNumberTrackerServiceImpl</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>RandomNumberService</servlet-name>
        <url-pattern>/randomnumbertracker/RandomNumberService</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>randomnumbertracker.html</welcome-file>
    </welcome-file-list>

</web-app>
